{
  "include": [
    "src/**/*",
  ],
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "src/*"
      ]
    },
   // See "Virtual Directories" in https://www.npmjs.com/package/typescript-transform-paths
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "useRootDirs": true
      }
    ],
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "types": [
      "node"
    ]
  }
}