{
    "extends": "../tsconfig.json",
    "include": [
        "./**/*"
    ],
    "compilerOptions": {
        "types": [
            "node",
            "jest"
        ],
        "paths": {
            "src/*": [
                "src/*"
            ],
            "@unit/*": [
                "test/unit/*"
            ],
            "@integration/*": [
                "test/integration/*"
            ],
            "@tests-utils/*": [
                "test/common-tests-utils/*"
            ]
        },
    }
}