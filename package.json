{
  "name": "authtasker",
  "version": "1.0.0",
  "main": "app.js",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "type-check": "tspc --noEmit src/app.ts",
    "dev": "npm run type-check && dotenvx run -f envs/.env.dev -- tsx watch -r tsconfig-paths/register src/app.ts",
    "containers:dev": "docker compose --env-file envs/.env.dev -p authtasker-dev up -d",
    "containers:test:e2e": "docker compose --env-file envs/.env.e2e -p authtasker-e2e up -d",
    "containers:all": "npm run containers:dev && npm run containers:test:int && npm run containers:test:e2e",
    "test:unit": "jest --config  jest/jest.unit.config.ts",
    "test:int": "NODE_ENV=integration node -r tsconfig-paths/register -- ./node_modules/jest/bin/jest.js --config jest/jest.int.config.ts",
    "build": "rimraf ./dist && tspc -p tsconfig.build.json",
    "start": "dotenvx run -f envs/.env.prod -- node dist/app.js",
    "server:e2e": "dotenvx run -f envs/.env.e2e -- tsx -r tsconfig-paths/register src/app.ts",
    "test:e2e": "dotenvx run -f envs/.env.e2e -- node -r tsconfig-paths/register -- ./node_modules/jest/bin/jest.js --config jest/jest.e2e.config.ts",
    "test:e2e:parallel": "npm run containers:test:e2e && conc \"npm run server:e2e\" \"npm run test:e2e\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@faker-js/faker": "^9.2.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/connect-timeout": "^0.0.39",
    "@types/express": "^5.0.1",
    "@types/imapflow": "^1.0.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.10.10",
    "@types/nodemailer": "^6.4.17",
    "@types/quoted-printable": "^1.0.2",
    "@types/supertest": "^6.0.3",
    "axios": "^1.7.9",
    "cheerio": "^1.0.0",
    "concurrently": "^9.1.2",
    "imapflow": "^1.0.186",
    "ioredis-mock": "^8.9.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "mongodb-memory-server": "^10.1.4",
    "nodemailer-mock": "^2.0.8",
    "quoted-printable": "^1.0.1",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "ts-patch": "^3.2.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.4",
    "typescript": "^5.6.3",
    "typescript-transform-paths": "^3.5.5"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.25.2",
    "@nestjs/mapped-types": "^2.0.6",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "connect-timeout": "^1.9.0",
    "cross-env": "^7.0.3",
    "env-var": "^7.5.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.7.3",
    "nodemailer": "^6.9.16",
    "uuid": "^11.0.5",
    "winston": "^3.17.0"
  }
}
