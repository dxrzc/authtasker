{
  "name": "authtasker",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "type-check": "tspc --noEmit src/app.ts",
    "dev": "npm run type-check && dotenvx run -f envs/.env.dev -- tsx watch -r tsconfig-paths/register src/app.ts",
    
    "containers:dev": "docker compose --env-file envs/.env.dev -p authtasker-dev up -d",
    "containers:test:int": "docker compose --env-file envs/.env.int -p authtasker-int up -d",
    "containers:test:e2e": "docker compose --env-file envs/.env.e2e -p authtasker-e2e up -d",
    "containers:all": "npm run containers:dev && npm run containers:test:int && npm run containers:test:e2e",

    "test:unit": "jest --config  jest/jest.unit.config.ts",
    "test:int": "npm run containers:test:int && dotenvx run -f envs/.env.int -- node -r tsconfig-paths/register -- jest --config jest/jest.int.config.ts",
    "test:e2e": "npm run containers:test:e2e && dotenvx run -f envs/.env.e2e -- jest --config jest/jest.e2e.config.ts",

    "build": "rimraf ./dist && tspc -p tsconfig.build.json",
    "start": "npm run build && dotenvx run -f envs/.env.prod -- node dist/app.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@faker-js/faker": "^9.2.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.1",
    "@types/nodemailer": "^6.4.16",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-patch": "^3.2.1",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.25.1",
    "@nestjs/mapped-types": "^2.0.6",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "env-var": "^7.5.0",
    "express": "^4.21.1",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.7.3",
    "nodemailer": "^6.9.16",
    "tsconfig-paths": "^4.2.0",
    "typescript-transform-paths": "^3.5.2",
    "uuid": "^11.0.3",
    "winston": "^3.17.0"
  }
}
