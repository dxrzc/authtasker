# === Server Configuration ===
WEB_URL=                              # Base public URL used in emails or links sent to users

PORT=                                 # Port the server runs on (default: 3000)

# === Logging ===
HTTP_LOGS=                            # Whether to show HTTP request logs in the console (true | false)                 

# === Databases ===
REDIS_URI=
MONGO_URI=

# === Caching ===
PAGINATION_CACHE_TTLS_SECONDS=        # Time in seconds before paginated results expire from cache
USERS_API_CACHE_TTL_SECONDS=          # Time in seconds before cached users expire
TASKS_API_CACHE_TTL_SECONDS=          # Time in seconds before cached tasks expire
CACHE_HARD_TTL_SECONDS=               # Max time a cached document is valid without re-validation

# === Session token ===
JWT_SESSION_EXP_TIME=                # e.g. 10m, 1h, 7d
JWT_PRIVATE_KEY=

# === Email validation token ===
JWT_EMAIL_VALIDATION_EXP_TIME=        # Expiration for email validation token (e.g. 10m, 1h)

# === Refresh token === 
MAX_REFRESH_TOKENS_PER_USER=          # Max concurrent refresh tokens allowed per user
JWT_REFRESH_EXP_TIME=                 # Expiration time for refresh tokens (e.g. 30d)
JWT_REFRESH_PRIVATE_KEY=

# === Password Recovery ===
JWT_PASSWORD_RECOVERY_EXP_TIME=       # Expiration time for password recovery tokens (e.g. 10m, 1h)

